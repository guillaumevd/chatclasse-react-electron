{
  "name": "client",
  "version": "0.1.0",
  "description": "Descripton de l'appli",
  "author": {
    "name": "Guillaume Vandriessche",
    "email": "Guillaumevandriessche776@gmail.com"
  },
  "private": true,
  "main": "main_process/app.js",
  "homepage": "./",
  "repository": {
    "type" : "git",
    "url" : "git+https://github.com/guillaumevd/chatclasse-react-electron.git"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron:serve": "concurrently -k \"cross-env BROWSER=none yarn start\" \"yarn electron:start\"",
    "electron:build": "yarn build && electron-builder -c.extraMetadata.main=main_process/app.js",
    "electron:start": "wait-on tcp:127.0.0.1:3000 && electron ."
  },
  "build": {
    "extends": null,
    "appId": "be.guillaumevd.chatclasse",
    "files": [
      "main_process/**/*",
      "dist/**/*",
      "build/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "assets"
    }
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "@electron/remote": "1.0.2",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "add": "^2.0.6",
    "electron-is-dev": "^2.0.0",
    "electron-updater": "^5.3.0",
    "react": "^18.2.0",
    "react-chat-engine": "^1.11.28",
    "react-chat-engine-pretty": "^0.1.8",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1",
    "web-vitals": "^2.1.4",
    "yarn": "^1.22.19"
  },
  "devDependencies": {
    "concurrently": "^7.6.0",
    "cross-env": "^7.0.3",
    "electron": "^23.1.3",
    "electron-builder": "^23.6.0",
    "wait-on": "5.2.1"
  }
}
